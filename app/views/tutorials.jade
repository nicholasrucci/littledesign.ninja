extends ./header.jade

block title
	title Little Design Ninja | Tutorials
block content
	div.spacer
	section.main
		- var n = ['','','','','','','','','']
		div.wrapper
			div.paginate
				a(href="previous")
					img(src='/images/arrow-previous.png' alt='previous page')
				a(href='next')
					img(src='/images/arrow-next.png' alt='next page')
			each val, index in n
				figure
					img(src='/images/thumb.png' alt='video')
					figcaption
						p.title
							a(href="/tutorial.html") title
						p.time 3:45
						//- if favorite
						//- 	img.fav(src='/images/star-favorite.png' alt='favorite')
						//- else
						img.fav(src='/images/star-normal.png' alt='not favorite')
			div.paginate
				a(href="previous")
					img(src='/images/arrow-previous.png' alt='previous page')
				a(href='next')
					img(src='/images/arrow-next.png' alt='next page')
			div.clear
	div.spacer



	include ./foot.jade