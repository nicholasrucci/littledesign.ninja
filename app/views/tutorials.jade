extends ./header.jade

block title
	title Little Design Ninja | Tutorials
block content
	div.spacer
	section.main
		div.wrapper
			div.paginate
				a(href="previous")
					img(src='/images/arrow-previous.png' alt='previous page')
				a(href='next')
					img(src='/images/arrow-next.png' alt='next page')
			each video in videos
				figure
					img(src='/images/thumb.png' alt='video')
					figcaption
						p.title
							a(href="/videos/#{video.id}") #{video.title}
						p.time #{video.duration}
						//- if favorite
						//- 	img.fav(src='/images/star-favorite.png' alt='favorite')
						//- else
						img.fav(src='/images/star-normal.png' alt='not favorite')
			div.paginate
				a(href="#")
					img(src='/images/arrow-previous.png' alt='previous page')
				a(href='#')
					img(src='/images/arrow-next.png' alt='next page')
			div.clear
	div.spacer



	include ./foot.jade